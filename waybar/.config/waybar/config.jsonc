{
    "layer": "top",
    "position": "top",
    "reload_style_on_change": true,
    "modules-left": ["custom/notification","clock","custom/pacman","tray"],
    "modules-center": ["hyprland/workspaces"],
    "modules-right": ["pulseaudio","custom/cava_mviz","group/expand","bluetooth","network","battery","custom/power"],
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "active": "ÔÑë",
            "default": "ÔÑë",
            "empty": "ÔÑë"
        },
        "persistent-workspaces": {
            "*": [ 1,2,3,4,5 ]
        }
    },
    // "custom/cava_mviz": {
    //     "exec": "$HOME/.config/waybar/scripts/waybarCava.sh",
    //     "format": "{}"
    // },
    "custom/power": {
        "format": "‚èª",
        "exec": "echo ; echo Û∞ü° power // blur",
        "on-click": "$HOME/.config/hypr/scripts/Wlogout.sh",
        "on-click-right": "$HOME/.config/hypr/scripts/ChangeBlur.sh",
        "interval": 86400, // once every day
        "tooltip": true,
    },
    "custom/notification": {
        "tooltip": false,
        "format": "Óöê",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "kitty",
        "escape": true
    },
    "clock": {
        "format": "{:%I:%M %p} ",
        "interval": 1,
        "tooltip-format": "<tt>{calendar}</tt>",
        "calendar": {
            "format": {
                "months": "<span color='#000000'><b>{}</b></span>",
                "weekdays": "<span color='#000000'><b>{}</b></span>",
                "today": "<span color='#000000'><b>{}</b></span>"
            }
        },
        "actions": {
            "on-click-right": "shift_down",
            "on-click": "shift_up"
        }
    },
    "pulseaudio": {
        "format": "{icon}{volume}%",
        "format-muted": "Ôë¶",
        "format-icons": {
            "default": ["ÔÄ® "]
        },
        "on-click":"pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-scroll-up": "wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ 5%+ ",
        "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-",
        "on-click-right": "pavucontrol"
    },
    "network": {
        "format-wifi": "Ôá´",
        "format-ethernet":"Óºâ",
        "format-disconnected": "Ó¨Å",
        "tooltip-format-disconnected": "Error",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "tooltip-format-ethernet": "{ifname} üñß ",
        "on-click": "kitty nmtui"
    },
    "bluetooth": {
        "format-on": "Û∞ÇØ",
        "format-off": "BT-off",
        "format-disabled": "Û∞Ç≤",
        "format-connected-battery": "{device_battery_percentage}% Û∞ÇØ",
        "format-alt": "{device_alias}Û∞ÇØ",
        "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\n{device_address}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\n{device_address}\n{device_battery_percentage}%",
        "on-click-right": "blueman-manager"
    },
    "battery": {
        "interval":1,
        "states": {
            "good": 95,
            "warning": 20,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% Û∞ÇÑ",
        "format-plugged": "{capacity}% Û∞ÇÑ Ó¨≠",
        "format-alt": "{time} {icon}",
        "format-icons": [
            "Û∞Åª",
            "Û∞Åº",
            "Û∞Åæ",
            "Û∞ÇÄ",
            "Û∞ÇÇ",
            "Û∞Åπ"
        ]
    },
    "custom/pacman": {
        "format": "Û∞Ö¢ {}",
        "interval": 600,
        "exec": "checkupdates | wc -l",
        "exec-if": "exit 0",
        "on-click": "kitty sh -c 'yay; sudo pacman -Syu; echo Done - Press enter to exit; read'; pkill -SIGRTMIN+8 waybar",
        "signal": 8,
        "tooltip": false
    },
    "custom/expand": {
        "format": "ÔÑÑ",
        "tooltip": false
    },
    "custom/endpoint":{
        "format": "|",
        "tooltip": false
    },
    "group/expand": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 600,
            "transition-to-left": true,
            "click-to-reveal": true
        },
        "modules": ["custom/expand", "custom/colorpicker","cpu","memory","temperature","custom/endpoint"]
    },
    "custom/colorpicker": {
        "format": "{}",
        "return-type": "json",
        "interval": "once",
        "exec": "~/.config/waybar/scripts/colorpicker.sh -j",
        "on-click": "~/.config/waybar/scripts/colorpicker.sh",
        "signal": 1
    },
    "cpu": {
        "format": "Û∞ª†",
        "tooltip": true,
        "on-click": "gnome-calculator",
        "on-click-right": "zen-browser"

    },
    "memory": {
        "format": "ÓøÖ"
    },
    "temperature": {
        "thermal-zone":1,
        "critical-threshold": 80,
        "format": "{icon}",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },
    "tray": {
        "icon-size": 14,
        "spacing": 10
    },
}

